// START AJAX FORM --> QUESTION 1 //
$('#start-form a').parent().html("<%= j render './user_profils/partials/form', user: @user, user_profil: @user_profil %>")


// QUESTION ABOUT FIRST NAME //
$('#user_profil_first_name').keyup(function(){
  if($(this).val().length >= 3) {
    $('#next-to-gender').removeClass('hidden');
  } else {
    $('#next-to-gender').addClass('hidden');
  }
});

  // ** user validate ** //
$('#next-to-gender a').click(function(event) {
  event.preventDefault();

  $('.form-about-gender').removeClass('hidden');
  $('.form-about-first-name').addClass('hidden');
})


