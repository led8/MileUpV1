function handleProfil() {
  $('.profil').fadeOut(200);
  $('.user-profil-form').append("<%= j render './user_profils/partials/ask_for_profil', user: @user, user_profil: @user_profil %>");
  setTimeout(function(){
    $('.sport-profil').fadeIn(200);
  }, 300)
}

function handleSportFrequencies() {
  $('#sport-profil a').click(function(event){
    event.preventDefault();
    $('.sport-profil').fadeOut(200);
    $('.user-profil-form').append("<%= j render './user_profils/partials/ask_for_sport_frequencies', user: @user, user_profil: @user_profil %>");
    setTimeout(function(){
      $('.sport-frequencies').fadeIn(200);
    }, 300)
  });
}

function handleSportInterests() {
  $('#sport-frequencies a').click(function(event){
    event.preventDefault();
    $('.sport-frequencies').fadeOut(200);
    $('.user-profil-form').append("<%= j render './user_profils/partials/ask_for_sport_interests', user: @user, user_profil: @user_profil %>");
    setTimeout(function(){
      $('.sport-interests').fadeIn(200);
    }, 300)
  });
}

handleProfil();
handleSportFrequencies();
handleSportInterests();
