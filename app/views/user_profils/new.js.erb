// QUESTION ABOUT AGE //
  // ** user validate ** //
$('#next-to-age a').click(function(event) {
  event.preventDefault();

  $('.form-about-age').removeClass('hidden');
  $('.form-about-age').find('.field').removeClass('hidden');
  $('.form-about-gender').addClass('hidden');
})

  // ** user pass ** //
$('#pass-to-age a').click(function(event) {
  event.preventDefault();

  $('.form-about-age').removeClass('hidden');
