<section class="signin-container">

  <div class="mileup-logo">
    <%= svg('logo') %>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs login-form">
      <%= f.input :email,
                  label: "Addresse e-mail",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "forgot-password" %>
      <% end %>

      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>

    </div>

    <div class="cgu-text">
      En vous connectant à nos services, vous acceptez les <%= link_to "les conditions générales d'utilisation", "#" %> et la <%= link_to "la politique de protection des données personnes", "#" %>
    </div>

    <div class="buttons-container">
      <div class="form-actions">
        <%= f.button :submit, "Se connecter", class: "login-button-bis" %>
      </div>

      <div class="facebook-login">
        <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "S'identifier avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "facebook-button" %>
          <% end %>
        <% end %>
      </div>
    </div>


  <% end %>

  <div class="do-not-member text-white">
    Vous n'êtes pas encore membre ?
  </div>

  <%= render "devise/shared/links" %>

</section>
