<section class="login-container">

  <div class="mileup-logo">
    <%= svg('logo') %>
  </div>

  <div class="join-mileup">
    <h1 class="header text-white">
      Rejoignez la communauté
    </h1>
    <div class="text text-white">
      Accédez facilement aux équipements <br>sportifs de votre ville. Recevez du contenus <br>adapté à vos objectifs, et <strong>surpassez-les</strong>
    </div>
  </div>

  <div class="facebook-login">

  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs login-form">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</section>
