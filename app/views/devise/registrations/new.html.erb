<section class="signup-container">

  <div class="mileup-logo">
    <%= svg('logo') %>
  </div>

  <div class="join-mileup">

    <h1 class="header text-white">
      Rejoignez la communauté
    </h1>
    <div class="text-container text-white">
      <div class="text-top">Accédez facilement aux équipements</div>
      <div class="text-between">sportifs de votre ville. Recevez du contenus</div>
      <div class="text-bottom">adapté à vos objectifs, et <strong>surpassez-les</strong></div>
    </div>

    <div class="facebook-login">
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "S'identifier avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "facebook-button" %>
        <% end %>
      <% end %>
    </div>

  </div>

  <div class="separate-login-line"></div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  label: "Adresse e-mail",
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmation du mot de passe",
                  required: true,
                  input_html: { autocomplete: "new-password" } %>

      <%= f.input :receive_content,
                  as: :boolean,
                  label: "Inscrivez-vous pour recevoir du contenu exclusif Mile'Up" %>
      </div>

    <div class="cgu-text">
      En vous connectant à nos services, vous acceptez les <%= link_to "les conditions générales d'utilisation", "#" %> et la <%= link_to "la politique de protection des données personnes", "#" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class: "login-button mr-5" %>

      <%= render "devise/shared/links" %>
    </div>

  <% end %>

</section>
